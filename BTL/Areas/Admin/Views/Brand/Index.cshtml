@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brands Listed";
}

<h3>List Brands</h3>
<a asp-action="Create" asp-controller="Brand">Add Brand</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brands Name</th>
            <th scope="col">Brands Description</th>
            <th scope="col">Brands Slug</th>
            
            @* <th scope="col">Brands Status</th> *@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                
               @*  <td>
                    @if(@item.Status ==1){
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td> *@

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm " asp-controller="Brand" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Brand" asp-route-Id="@item.Id">Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>